{
  "name": "@usewaypoint-monorepo",
  "version": "0.0.6",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "target": "ES2022",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc",
    "test": "npx jest",
    "remove": "rm -rf node_modules package-lock.json dist",

    "block-avatar": "cd ./packages/block-avatar && npm i && npm link",
    "block-button": "cd ./packages/block-button && npm i && npm link",
    "block-divider": "cd ./packages/block-divider && npm i && npm link",
    "block-heading": "cd ./packages/block-heading && npm i && npm link",
    "block-html": "cd ./packages/block-html && npm i && npm link",
    "block-image": "cd ./packages/block-image && npm i && npm link",
    "block-spacer": "cd ./packages/block-spacer && npm i && npm link",
    "block-text": "cd ./packages/block-text && npm i && npm link",
    "block-test": "cd ./packages/block-test && npm i && npm link",
    "document-core": "cd ./packages/document-core && npm i && npm link",
    "editor-sample": "cd ./packages/editor-sample && npm i && npm link",
    "email-builder": "cd ./packages/email-builder && npm i && npm link",
    "myinstall": "npm i && npm run block-avatar && npm run block-button && npm run block-divider && npm run block-heading && npm run block-html && npm run block-image && npm run block-spacer && npm run block-text && npm run block-test && npm run document-core && npm run editor-sample && npm run email-builder",

    "link-block-avatar": "npm link @usewaypoint/block-avatar",
    "link-block-button": "npm link @usewaypoint/block-button",
    "link-block-divider": "npm link @usewaypoint/block-divider",
    "link-block-heading": "npm link @usewaypoint/block-heading",
    "link-block-html": "npm link @usewaypoint/block-html",
    "link-block-image": "npm link @usewaypoint/block-image",
    "link-block-spacer": "npm link @usewaypoint/block-spacer",
    "link-block-text": "npm link @usewaypoint/block-text",
    "link-block-test": "npm link @lampersky/block-test",
    "link-document-core": "npm link @usewaypoint/document-core",
    "link-editor-sample": "npm link @usewaypoint/editor-sample",
    "link-email-builder": "npm link @usewaypoint/email-builder",
    "link": "npm run link-block-avatar && npm run link-block-button && npm run link-block-divider && npm run link-block-heading && npm run link-block-html && npm run link-block-image && npm run link-block-spacer && npm run link-block-text && npm run link-block-test && npm run link-document-core && npm run link-editor-sample && npm run link-email-builder"
  },
  "author": "carlos@usewaypoint.com",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  }
}
